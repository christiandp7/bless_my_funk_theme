
<div class="section--{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="img-w-text__about-height-section">
  <div class="page-width page-width__about">  

    <div class="grid grid--uniform">
      {%- comment -%}<div class="grid__item small--one-whole medium-up--five-twelfths">{%- endcomment -%}
      <div class="grid__item small--one-whole medium-up--one-half">
        
        <div class="img-w-h__container">
          {% if section.settings.heading != blank %}
            <h2 class="img-w-h__heading">{{ section.settings.heading }}</h2>
          {% endif %}
          
          <div class="img-w-t_img-container">
            {% if section.settings.image_1 != blank %}
              <picture>
                <source media="(min-width: 1500px)" srcset="{{ section.settings.image_1 | img_url: '1000x' }}" />
                <source media="(min-width: 750px)" srcset="{{ section.settings.image_1 | img_url: '700x' }}" />
                <img class="img-fullwidth" src="{{ section.settings.image_1 | img_url: '480x' }}" alt="{{ section.settings.image_1.alt | escape }}" />
              </picture>
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}       
            {% endif %}
          </div>
        </div>

      </div>
      {%- comment -%}<div class="grid__item small--one-whole medium-up--seven-twelfths">{%- endcomment -%}
      <div class="grid__item small--one-whole medium-up--one-half">
        <div class="img-w-t_img-container">
          {% if section.settings.image_2 != blank %}
            <picture>
              <source media="(min-width: 1500px)" srcset="{{ section.settings.image_2 | img_url: '1000x' }}" />
              <source media="(min-width: 750px)" srcset="{{ section.settings.image_2 | img_url: '700x' }}" />
              <img class="img-fullwidth" src="{{ section.settings.image_2 | img_url: '480x' }}" alt="{{ section.settings.image_2.alt | escape }}" />
            </picture>
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}       
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .section--{{ section.id }} .img-w-h__heading {
    font-size: {{ section.settings.heading_font_size }}rem;
    line-height: {{ section.settings.heading_line_height }};
  }
  @media screen and (min-width: 750px) {
    .section--{{ section.id }} .img-w-h__heading {
      margin: {{ section.settings.heading_margin_top_bottom }}px 0;
    }
    .section--{{ section.id }} .img-w-h__container {
      top: -{{ section.settings.heading_top_offset }}px;
    }
  }
  
</style>

{% schema %}
{
  "name": "Images - About",
  "class": "imgs",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "heading_top_offset",
      "label": "Heading top offset",
      "unit": "px",
      "min": 0,
      "max": 300,
      "step": 5,
      "default": 0
    },
    {
      "type": "range",
      "id": "heading_margin_top_bottom",
      "label": "Heading margin top bottom",
      "unit": "px",
      "min": 0,
      "max": 100,
      "step": 2,
      "default": 0
    },
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "label": "Heading font size",
      "unit": "rem",
      "min": 1,
      "max": 3,
      "step": 0.1,
      "default": 1.5
    },
    {
      "type": "range",
      "id": "heading_line_height",
      "label": "Heading line-height",
      "unit": "%",
      "min": 1,
      "max": 3,
      "step": 0.1,
      "default": 1.5
    },
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    }
    
  ]
}
{% endschema %}