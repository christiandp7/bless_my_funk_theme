

<div class="section--{{ section.id }} super-heading index-section-pad" data-section-id="{{ section.id }}" data-section-type="custom-heading-height-section">
  <div class="page-width full">
    <div class="custom-heading text-center">
      <h2 class="super-heading__h2">{{ section.settings.heading }}</h2>
    </div>
  </div>
</div>


<style>
  .section--{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
  }
  .section--{{ section.id }} {
    padding: {{ section.settings.padding }}px 0;
  }
  .section--{{ section.id }} .super-heading__h2{
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_font-size }}rem;
  }
  @media screen and (max-width: 768px) {
    .section--{{ section.id }} .super-heading__h2{
      font-size: {{ section.settings.heading_font-size_mobile }}rem;      
    }
    .section--{{ section.id }} {
      padding: {{ section.settings.padding | divided_by: 2 }}px 0;
    }
  }
</style> 

{% schema %}
{
  "name": "Super Heading - Product",
  "settings": [
    {
      "type": "header",
      "content": "Section"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#fff"
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Padding",
      "unit": "px",
      "min": 10,
      "max": 200,
      "step": 5,
      "default": 50
    },
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#000"
    },
    {
      "type": "range",
      "id": "heading_font-size",
      "label": "Heading font size",
      "unit": "rem",
      "min": 1,
      "max": 10,
      "step": 0.5,
      "default": 3
    },
    {
      "type": "range",
      "id": "heading_font-size_mobile",
      "label": "Heading font size on mobile",
      "unit": "rem",
      "min": 1,
      "max": 5,
      "step": 0.2,
      "default": 3
    }
     
  ]
}
{% endschema %}