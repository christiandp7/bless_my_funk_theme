<div class="site-header__icons-wrapper site-header__icons-wrapper__mobile">

  {% if settings.search_enabled %}
  <button type="button" class="btn--link site-header__icon site-header__search-toggle js-drawer-open-top">
    {% include 'icon-search' %}
  </button>
  {% endif %}

  {% if shop.customer_accounts_enabled %}
  {% if customer %}
  <a href="{{ routes.account_url }}" class="site-header__icon site-header__account">
    {% include 'icon-login' %}
  </a>
  {% else %}
  <a href="{{ routes.account_login_url }}" class="site-header__icon site-header__account">
    {% include 'icon-login' %}
  </a>
  {% endif %}
  {% endif %}

  <a href="{{ routes.cart_url }}" class="site-header__icon site-header__cart">
    {% include 'icon-cart' %}
    <span class="icon__fallback-text">{{ 'layout.cart.title' | t }}</span>
    <div id="CartCount" class="site-header__cart-count{% if cart.item_count == 0 %} hide{% endif %}"
      data-cart-count-bubble>
      <span data-cart-count>{{ cart.item_count }}</span>
      <span class="icon__fallback-text medium-up--hide">{{ 'layout.cart.items_count' | t: count: cart.item_count
        }}</span>
    </div>
  </a>
</div>